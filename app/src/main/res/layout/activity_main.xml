<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="215dp">
    <LinearLayout
        android:id="@+id/btn_quran"
        android:layout_width="169dp"
        android:layout_height="229dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal">
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_corner_green">

          <ImageView
              android:id="@+id/img_quran"
              android:layout_width="150dp"
              android:layout_height="180dp"
              android:layout_marginTop="22dp"
              android:layout_marginBottom="36dp"
              android:layout_marginHorizontal="24dp"
              android:src="@drawable/bacaquran"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="200dp"
              android:layout_marginStart="44dp"
              android:fontFamily="@font/montserratsemibold"
              android:text="Baca Qur'an"
              android:textSize="12sp" />
        </RelativeLayout>
      </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_hukum"
        android:layout_width="169dp"
        android:layout_height="229dp"
        android:layout_marginLeft="218dp"
        android:layout_marginStart="218dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal">
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_corner_yellow">

          <ImageView
              android:id="@+id/img_hukum"
              android:layout_width="150dp"
              android:layout_height="180dp"
              android:layout_marginTop="22dp"
              android:layout_marginBottom="36dp"
              android:layout_marginHorizontal="24dp"
              android:src="@drawable/hukum"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="200dp"
              android:layout_marginStart="32dp"
              android:fontFamily="@font/montserratsemibold"
              android:text="Hukum Islam"
              android:textSize="12sp" />
        </RelativeLayout>
      </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_niat"
        android:layout_width="169dp"
        android:layout_height="229dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="218dp"
        android:layout_marginStart="218dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal">

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_corner_red">

          <ImageView
              android:id="@+id/img_niat"
              android:layout_width="150dp"
              android:layout_height="180dp"
              android:layout_marginTop="22dp"
              android:layout_marginBottom="36dp"
              android:layout_marginHorizontal="24dp"
              android:src="@drawable/niat"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="200dp"
              android:layout_marginStart="24dp"
              android:fontFamily="@font/montserratsemibold"
              android:text="Niat dan Bacaan"
              android:textSize="12sp" />
        </RelativeLayout>
      </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_doa"
        android:layout_width="169dp"
        android:layout_height="229dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal">
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_corner_blue">

          <ImageView
              android:id="@+id/img_doa"
              android:layout_width="150dp"
              android:layout_height="180dp"
              android:layout_marginHorizontal="24dp"
              android:layout_marginTop="22dp"
              android:layout_marginBottom="36dp"
              android:src="@drawable/doa" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="200dp"
              android:layout_marginStart="60dp"
              android:fontFamily="@font/montserratsemibold"
              android:text="Doa-doa"
              android:textSize="12sp" />
        </RelativeLayout>
      </androidx.cardview.widget.CardView>
    </LinearLayout>
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/cons_judul"
      android:layout_width="363dp"
      android:layout_height="141dp"
      android:background="@drawable/ic_corner_red"
      android:layout_marginHorizontal="26dp"
      android:layout_marginTop="26dp">

    <ImageView
        android:layout_width="132dp"
        android:layout_height="118dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="218dp"
        android:layout_marginStart="218dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/mainlogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_judul_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="71dp"
        android:layout_marginTop="48dp"
        android:text="IslamQue"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="@color/black"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="41dp"
        android:text="Mau baca apa hari ini?"
        android:fontFamily="@font/montserratregular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_2"
        app:layout_constraintVertical_bias="0.2" />

  </RelativeLayout>

  <TextView
      android:id="@+id/tv_menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="178dp"
      android:layout_marginLeft="24dp"
      android:layout_marginStart="24dp"
      android:fontFamily="@font/montserratsemibold"
      android:text="Menu"
      android:textColor="@color/black"
      android:textSize="16sp" />



</RelativeLayout>